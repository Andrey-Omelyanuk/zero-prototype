{
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark" : [true, "single"],
    "indent"    : [true, "spaces", 2],
    "one-line"  : [true, "check-open-brace", "check-whitespace"],
    "semicolon" : [true, "never"],

    "linebreak-style"     : [true, "LF"],
    "max-file-line-count" : [true, 400]
  }
}
